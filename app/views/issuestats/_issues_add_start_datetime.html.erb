<% if @project.module_enabled?("issuestats") == true %>
  <p>
    <% @issue_start_time = IssueStartTime.find_by_issue_id(params[:id]) %>
    <% if @issue_start_time != nil %>
      <% time = Time.parse(@issue_start_time.start_datetime.to_s) %>
      <% time.to_formatted_s(:time) %>
      <%= label :issuestats, "Start time" %> <%= time_field(:issuestats, :start_time, :value => time.to_s(:time), :required => true) %>
    <% else %>
      <% time = Time.now %>
      <% time.to_formatted_s(:time) %>
      <%= label :issuestats, "Start time" %> <%= time_field(:issuestats, :start_time, :value => time.to_s(:time), :required => true) %>
    <% end %>
<% end %>
